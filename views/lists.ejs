<%- include("header") %>
<div class="head-box">
  <h1 id="greet">Hello Everyone, I'm Arshad, I built this to-do-list app from scratch with Node.Js & MongoDB.
    <br>
    <a href="https://github.com/ArshadChowdhury/To-Do-List-App"> See The Code On Github</a> </h1>
</div>

<div class="box" id="heading">
  
  <h2><%=listTitle%></h2>
</div>


<div class="box">
  <% newListItems.forEach(function(item){ %>

  <form action="/delete" method="post">


    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=item.id%>" onChange="this.form.submit()">
      <p><%=item.name%></p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>"> </input>
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Add More" autocomplete="off">
    <button type="submit" name="list" value=<%=listTitle%>>+</button>

    </form>

    </div>








    <%- include("footer") %>
